<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- A CardView that contains a TextView -->
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/light_item_card_view"
        android:layout_gravity="center"
        android:layout_width="@dimen/light_width"
        android:layout_height="@dimen/light_height"
        card_view:cardBackgroundColor="@color/material_blue_500"
        android:clickable="true"
        android:layout_centerInParent="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginTop="@dimen/margin_top"
        card_view:cardCornerRadius="10dp">
        <TextView
            android:id="@+id/light_item_text"
            android:gravity="center"
            android:textSize="@dimen/light_text_size"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true" />

    </android.support.v7.widget.CardView>




</RelativeLayout>