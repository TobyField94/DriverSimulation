<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:autoLink="email|phone|web"
        android:text="@string/register_about"/>

    <TextView
        android:id="@+id/register_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="24142421421421421421421421"
        android:background="@color/gray"
        android:textStyle="bold"
        android:gravity="center"
        android:textIsSelectable="true"
        android:padding="10dp"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/register_notice"/>
    <EditText
        android:id="@+id/register_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:hint="@string/register_notice_1"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/register_bt"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="36dp"
            android:layout_marginRight="80dp"
            android:layout_centerInParent="true"
            android:text="@string/register_active"/>

    </RelativeLayout>
</LinearLayout>